@page "/confirm"
<div class="d-flex flex-column h-100">
    <div class="container flex-grow-1">
        <div class="row">
            <div>
                <label class="fw-bold">Position</label>
                <input type="text" class="form-control"/>
            </div>
        </div>
        <div class="row">
            <div>
                <label class="fw-bold">Borrow date</label>
                <input type="date" class="form-control" @bind="borrowDate" @bind:event="oninput" />
            </div>
        </div>
        <div class="row">
            <div>
                <label class="fw-bold">Return date</label>
                <input type="date" class="form-control" @bind="returnDate" @bind:event="oninput" />
            </div>
        </div>
        <div class="row">
            <div>
                <label class="fw-bold">Project</label>
                <input type="text" class="form-control" @bind="projectCode" @bind:event="oninput" />
            </div>
        </div>
        <div class="row">
            <div>
                <label class="fw-bold">Note</label>
                <textarea class="form-control" style="min-height: 270px" @bind="note" @bind:event="oninput"></textarea>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center p-2">
        <button class="btn btn-primary" @onclick="OnConfirm"><i class="fa-solid fa-check"></i> Confirm</button>
    </div>
</div>
